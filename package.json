{
  "name": "githubreadmeviewer",
  "displayName": "githubreadmeviewer",
  "description": "allows you to see you github readme's",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/C0gzy/GitHubReadmeVSExtension"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:githubreadmeviewer.helloWorld",
    "onCommand:githubreadmeviewer.previewReadme"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "githubreadmeviewer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "githubreadmeviewer.previewReadme",
        "title": "Preview GitHub README",
        "category": "GitHub README Viewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "githubreadmeviewer.previewReadme",
          "when": "resourceExtname == .md && resourceFilename =~ /README(\\.md)?/i",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "markdown-it-task-lists": "^2.1.1"
  }
}
